<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Terminal Akses</title>
</head>
<body style="background:black; color:#00ff00; font-family:monospace; padding:20px;">

<pre id="terminal"></pre>

<script>
  const lines = [
    "[INFO] Menghubungkan ke server pusat...",
    "[INFO] Mengambil data enkripsi...",
    "[INFO] Membuka akses database penduduk...",
    "[INFO] Autentikasi berhasil...",
    "[INFO] Data berhasil di-decrypt âœ…"
  ];

  let index = 0;
  function typeLine() {
    if(index < lines.length){
      document.getElementById("terminal").innerHTML += lines[index] + "\n";
      index++;
      setTimeout(typeLine, 1500);
    } else {
      setTimeout(() => {
        window.location.href = "4.html";
      }, 2000);
    }
  }
  typeLine();
</script>

</body>
</html>
